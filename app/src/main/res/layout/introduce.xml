<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_register"
        android:layout_marginTop="@dimen/margin_main_middle"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_left_register">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_main_middle"
                android:text="@string/binding"
                android:textColor="@color/red"
                android:id="@+id/binding"
                android:textSize="@dimen/text_size_36" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_main_middle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_introduce_one"
                    style="@style/TextView_Register_top"
                    android:visibility="gone"
                    android:text="@string/register_introduce_one" />

                <TextView
                    android:id="@+id/register_introduce_two"
                    style="@style/TextView_Register_top"
                    android:layout_marginLeft="@dimen/margin_main_middle"
                    android:text="@string/register_introduce_two" />

                <TextView
                    android:id="@+id/register_introduce_three"
                    style="@style/TextView_Register_top"
                    android:layout_marginLeft="@dimen/margin_main_middle"
                    android:text="@string/register_introduce_three" />

                <TextView
                    android:id="@+id/register_introduce_five"
                    style="@style/TextView_Register_top"
                    android:layout_marginLeft="@dimen/margin_main_middle"
                    android:text="@string/register_introduce_five" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/back"
            android:layout_width="@dimen/height_top_register"
            android:layout_height="@dimen/height_top_register"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_main"
            android:background="@drawable/border_red_gradient_round"
            android:gravity="center"
            android:text="@string/back_home"
            android:textColor="@color/almost_white"
            android:textSize="@dimen/text_size_30" />

    </RelativeLayout>
</RelativeLayout>