<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/w48"
    android:layout_marginRight="@dimen/w48"
    android:layout_marginTop="@dimen/w15"
    android:background="@drawable/bg_white_rectangle_corner_r20"
    android:gravity="center_vertical"
    android:minHeight="@dimen/h138"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/eduImage"
        android:layout_width="@dimen/w112"
        android:layout_height="@dimen/w112"
        android:layout_marginLeft="@dimen/w30"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/w23"
        android:layout_marginTop="@dimen/h16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calssName"
            style="@style/CommonText"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/w20"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/coachName"
            style="@style/CommonText"
            android:layout_marginTop="@dimen/h6"
            android:textColor="@color/text_register"
            android:textSize="@dimen/w15"
            tools:text="@string/app_name" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/h10"
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>