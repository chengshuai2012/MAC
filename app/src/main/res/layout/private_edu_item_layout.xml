<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/w48"
    android:layout_marginRight="@dimen/w48"
    android:background="@drawable/bg_white_rectangle_corner_r20"
    android:gravity="center_vertical"
    android:minHeight="@dimen/h138"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/eduImage"
        android:layout_width="@dimen/w112"
        android:layout_height="@dimen/w112"
        android:layout_marginLeft="@dimen/w30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calssName"
            style="@style/CommonText"
            android:text="@string/app_name"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/w20" />

        <TextView
            android:id="@+id/coachName"
            style="@style/CommonText"
            android:layout_marginTop="@dimen/h6"
            android:text="@string/app_name"
            android:textColor="@color/text_register"
            android:textSize="@dimen/w15" />

        <com.link.cloud.widget.TagLayout
            android:id="@+id/sexualTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/w29"
            android:paddingLeft="@dimen/w29"
            android:paddingTop="@dimen/w29"
            android:paddingBottom="@dimen/w29"
            app:horizontalSpace="@dimen/w29"
            app:verticalSpace="@dimen/w29"
            app:tagTextColor="@color/selector_label_text"
            app:tagBackground="@drawable/selector_label_tag"
            app:tagTextHorizontalPadding="@dimen/w23"
            app:tagTextVerticalPadding="@dimen/w14"
            app:tagMinWidth="@dimen/w142"
            app:tagSelectMode="single"
            app:tagTextSize="@dimen/w28"/>
    </LinearLayout>
</LinearLayout>