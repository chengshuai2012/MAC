<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_main"
    android:paddingRight="@dimen/margin_main">


    <com.shizhefei.view.indicator.RecyclerIndicatorView
        android:id="@+id/titleIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/indicator_size"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/margin_main"
        android:paddingRight="@dimen/margin_main" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</LinearLayout>