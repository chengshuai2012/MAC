<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h262"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/w60"
        android:paddingRight="@dimen/w60">


        <Button
            android:id="@+id/lastButton"
            android:layout_width="@dimen/w244"
            android:layout_height="@dimen/h54"
            android:background="@drawable/border_lesson"
            android:textColor="@color/red"
            android:text="@string/last_text"
            android:textSize="@dimen/w28" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="@dimen/w244"
            android:text="@string/go_buy"

            android:layout_height="@dimen/h54"
            android:layout_marginLeft="@dimen/w40"
            android:background="@drawable/border_red_gradient"
            android:textColor="@color/white"
            android:textSize="@dimen/w28" />
    </LinearLayout>


</LinearLayout>