<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/w500"
    android:layout_height="@dimen/h280"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_red_member_car_gradient"
        android:orientation="vertical"
        android:paddingBottom="@dimen/h30"
        android:paddingLeft="@dimen/w32"
        android:paddingTop="@dimen/h30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLog"
                android:layout_width="@dimen/w151"
                android:layout_height="@dimen/h53" />

            <TextView
                android:id="@+id/cardname"
                style="@style/CommonText"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/w32"
                android:textColor="@color/white"
                tools:text="asdfa" />
        </LinearLayout>


        <TextView
            android:id="@+id/userName"
            style="@style/CommonText"
            android:textColor="@color/white"
            tools:text="asdfasdfasdfsa" />

        <TextView
            android:id="@+id/userPhone"
            style="@style/CommonText"
            android:textColor="@color/white"
            tools:text="asdfasdfasdfsa" />


    </LinearLayout>


</android.support.v7.widget.CardView>