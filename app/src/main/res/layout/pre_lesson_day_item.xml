<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="108px"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_main"
    android:layout_marginBottom="@dimen/margin_main"
    android:textSize="@dimen/text_size_24"
    android:textColor="@color/dark_gray"
    android:gravity="center"
    android:id="@+id/day_of_week"
    />
    <LinearLayout
        android:layout_width="@dimen/group_in_text_height"
        android:layout_height="@dimen/group_in_text_height"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/day_of_month_ll"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_36"
        android:textColor="@color/color_black_333333"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/day_of_month"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_24"
        android:textColor="@color/color_black_333333"
        android:gravity="center"
        android:id="@+id/day_of_launch"
        />
    </LinearLayout>
</LinearLayout>