<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h107"
        android:layout_marginLeft="@dimen/w12"
        android:layout_marginRight="@dimen/w12"
        android:layout_marginTop="@dimen/h21"
        android:background="@drawable/single_buy_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w37"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardName"
                style="@style/CommonText"
                android:layout_weight="1"
                tools:text="单次入场券"
                android:textColor="@color/red"
                android:textSize="@dimen/w18" />

            <TextView
                android:id="@+id/cardMoney"
                style="@style/CommonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/w56"
                android:textSize="@dimen/w14"
                tools:text="20.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w37"
            android:gravity="center"
            android:layout_marginTop="@dimen/h10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/validityPeriod"
                style="@style/CommonText"
                android:layout_weight="1"
                tools:text="有效期1年"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/w14" />

            <Button
                android:id="@+id/payButton"
                android:layout_width="@dimen/w115"
                android:layout_height="@dimen/h30"
                android:layout_marginLeft="@dimen/w40"
                android:layout_marginRight="@dimen/w35"
                android:background="@drawable/border_red"
                android:text="入场券"
                android:textColor="@color/white"
                android:textSize="@dimen/w14" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>