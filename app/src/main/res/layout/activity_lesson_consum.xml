<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almost_white"
    android:orientation="vertical">

    <com.link.cloud.widget.PublicTitleView
        android:id="@+id/publicTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="私教课程" />

    <TextView
        android:id="@+id/bind_way"
        android:layout_width="@dimen/text_width_main"
        android:layout_height="@dimen/text_height_main"
        android:layout_marginLeft="@dimen/margin_left_register"
        android:layout_marginRight="@dimen/margin_main"
        android:layout_marginTop="@dimen/margin_main"
        android:background="@drawable/border_red_gradient"
        android:gravity="center"
        android:text="@string/bind_way"
        android:textColor="@color/almost_white"
        android:textSize="@dimen/text_size_30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/lesson_consum_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/venue_image"
                android:layout_width="@dimen/circleProgressBar_width"
                android:layout_height="@dimen/circleProgressBar_width"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_main"
                android:layout_marginTop="@dimen/margin_main"
                android:src="@drawable/veune_way"
                app:civ_border_color="@color/red"
                app:civ_border_width="1dp" />

            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/custom_progress"
                android:layout_width="@dimen/circleProgressBar_width"
                android:layout_height="@dimen/circleProgressBar_width"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_main"
                android:layout_marginTop="@dimen/margin_main"
                android:background="@drawable/border_progress"
                app:progress_background_color="@color/translate"
                app:progress_end_color="@color/red"
                app:progress_start_color="@color/red"
                app:progress_start_degree="-180"
                app:progress_stroke_width="3dp"
                app:style="solid_line" />

            <TextView
                android:id="@+id/bind_venue_intro"
                android:layout_width="@dimen/bind_intro_textView_width"
                android:layout_height="@dimen/bind_intro_textView_height"
                android:layout_below="@+id/custom_progress"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_main"
                android:layout_marginTop="@dimen/margin_main"
                android:background="@drawable/border_red_10px"
                android:gravity="center"
                android:text="@string/right_finger"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_48" />

            <TextView
                android:id="@+id/bind_venue_intro_below"
                android:layout_width="@dimen/keyboard_width"
                android:layout_height="@dimen/group_in_text_height"
                android:layout_below="@+id/bind_venue_intro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_main"
                android:background="@drawable/border_red_gradient"
                android:gravity="center"
                android:text="@string/right_finger"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lesson_consum_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/multi_card"
                android:layout_width="@dimen/multi_card_width"
                android:layout_height="@dimen/code_image_view_height"
                android:layout_centerHorizontal="true">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/card_num"
                android:layout_width="@dimen/bind_intro_textView_width"
                android:layout_height="@dimen/bind_intro_textView_height"
                android:layout_below="@+id/multi_card"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_main"
                android:layout_marginTop="@dimen/margin_main"
                android:background="@drawable/border_gray_10px"
                android:gravity="center"
                android:text="@string/confirm_member_info"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_48" />

            <TextView
                android:id="@+id/confirm_consume"
                android:layout_width="@dimen/keyboard_width"
                android:layout_height="@dimen/group_in_text_height"
                android:layout_below="@+id/card_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_main"
                android:background="@drawable/border_red_gradient"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lesson_consum_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/consume_lesson_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_main"
                android:layout_marginLeft="@dimen/pre_pay_height"
                android:layout_marginTop="@dimen/text_height_main"
                android:text="@string/consume_lesson_today"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_size_36"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/lesson_consum_now_rl"
                android:layout_width="@dimen/consume_lesson_width"
                android:layout_height="@dimen/consume_lesson_height"
                android:layout_below="@+id/consume_lesson_today"
                android:layout_marginBottom="@dimen/text_height_main"
                android:layout_marginLeft="@dimen/pre_pay_height"
                android:background="@drawable/border_red_10px">

                <TextView
                    android:id="@+id/had_consume_lesson"
                    android:layout_width="@dimen/height_top_register"
                    android:layout_height="@dimen/text_size_42"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/pre_pay_height"
                    android:background="@drawable/border_red_for_consume"
                    android:gravity="center"
                    android:text="@string/had_consume_lesson"
                    android:textColor="@color/almost_white"
                    android:textSize="@dimen/text_size_26" />

                <TextView
                    android:id="@+id/lesson_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/had_consume_lesson"
                    android:layout_marginBottom="@dimen/margin_main_middle"
                    android:layout_marginLeft="@dimen/margin_main"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/text_size_32"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/coach_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lesson_name"
                    android:layout_marginBottom="@dimen/margin_main_middle"
                    android:layout_marginLeft="@dimen/margin_main"
                    android:text="@string/lesson_name"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/text_size_28" />

                <TextView
                    android:id="@+id/lesson_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coach_name"
                    android:layout_marginBottom="@dimen/margin_main"
                    android:layout_marginLeft="@dimen/margin_main"
                    android:text="@string/lesson_name"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/text_size_28" />
            </RelativeLayout>

            <TextView
                android:id="@+id/left_lesson_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_main"
                android:layout_marginLeft="@dimen/pre_pay_height"
                android:text="@string/lesson_left"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_size_36"
                android:layout_below="@+id/lesson_consum_now_rl"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_left_recyclerView"
                android:layout_below="@+id/left_lesson_today"
                android:layout_marginTop="@dimen/margin_main"
                >

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/confirm_consume_finish"
                android:layout_width="@dimen/keyboard_width"
                android:layout_height="@dimen/group_in_text_height"
                android:layout_below="@+id/lesson_left_recyclerView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/text_height_main"
                android:background="@drawable/border_red_gradient"
                android:gravity="center"
                android:text="@string/confirm_consume_lesson"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>