<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_red_gradient_10px"
    >
<TextView
    android:layout_marginTop="@dimen/group_in_text_height"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textColor="@color/white"
    android:textSize="@dimen/text_size_56"
    android:text="@string/cancel_pay"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3px"
    android:layout_marginTop="@dimen/text_height_main"
    android:layout_marginLeft="@dimen/dialog_icon_margin"
    android:background="@drawable/message_border_white"
    >

    <TextView

        android:layout_width="@dimen/text_confirm"
        android:layout_height="@dimen/dialog_80_height"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/border_red_gradient"

        android:textSize="@dimen/text_size_42"
        android:text="@string/confirm"
        android:id="@+id/cancel_pre_pay"
        />
</LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/text_height_main"
            android:layout_width="@dimen/text_confirm"
            android:layout_height="@dimen/dialog_80_height"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dialog_icon_margin"
            android:textColor="@color/red"
            android:background="@drawable/border_member"
            android:textSize="@dimen/text_size_42"
            android:text="@string/click_error"
            android:id="@+id/cancel_pre"
            />
    </LinearLayout>
</LinearLayout>