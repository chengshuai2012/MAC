<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/text_big_width_main"
    android:layout_height="@dimen/text_width_main"
    android:background="@color/almost_white"
    android:padding="3px"

    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/almost_white">

        <RelativeLayout
            android:id="@+id/lesson_consum_now_rl"
            android:layout_width="@dimen/consume_lesson_width"
            android:layout_height="@dimen/consume_lesson_height"
            android:layout_below="@+id/consume_lesson_today"
            android:background="@color/almost_white">

            <TextView
                android:id="@+id/had_consume_lesson"
                android:layout_width="@dimen/height_top_register"
                android:layout_height="@dimen/text_size_42"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/pre_pay_height"
                android:background="@drawable/border_red_for_consume"
                android:gravity="center"
                android:text="@string/had_consume_lesson"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_26" />

            <TextView
                android:id="@+id/lesson_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/had_consume_lesson"
                android:layout_marginBottom="@dimen/margin_main_middle"
                android:layout_marginLeft="@dimen/margin_main"
                android:text="@string/lesson_name"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_size_32"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson_name"
                android:layout_marginBottom="@dimen/margin_main_middle"
                android:layout_marginLeft="@dimen/margin_main"
                android:text="@string/lesson_name"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/lesson_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coach_name"
                android:layout_marginBottom="@dimen/margin_main"
                android:layout_marginLeft="@dimen/margin_main"
                android:text="@string/lesson_name"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_size_28" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>